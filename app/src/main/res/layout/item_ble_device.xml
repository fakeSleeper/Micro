<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/dp_4"
                                    android:layout_marginEnd="@dimen/dp_8"
                                    android:layout_marginStart="@dimen/dp_8"
                                    android:layout_marginTop="@dimen/dp_4"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:paddingEnd="@dimen/dp_5"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="@dimen/dp_3"
                                    app:cardElevation="@dimen/dp_2"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_device_phone_view"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:padding="@dimen/dp_3"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_5"
            android:src="@mipmap/phone_blue"
            />

        <TextView
            android:id="@+id/item_device_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_toRightOf="@id/item_device_phone_view"
            android:gravity="center_vertical"
            android:textColor="@color/comment_text"
            android:textSize="@dimen/sp_15"
            tools:text="我是提纲"
            />

        <ImageView
            android:id="@+id/item_device_info_view"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:padding="@dimen/dp_3"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/info_grey"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>